<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="8dp"
    android:layout_marginTop="8dp"
    android:background="@drawable/ble_dev_border">
    <TextView android:id="@+id/textViewDevName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[...Scan...]"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="24dp"/>
    <TextView android:id="@+id/textViewDevAddr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DevAddr"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        android:textSize="12dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewDevName"/>
    <TextView android:id="@+id/textViewRssi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RSSI"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/textViewDevName"
        android:layout_marginLeft="8dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textViewDevAddr"
        app:layout_constraintHorizontal_bias="0.775"
        android:textSize="12dp"/>
</android.support.constraint.ConstraintLayout>
